@model IEnumerable<BookLibrary.Models.Book>

@{
    ViewData["Title"] = "Книги";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Добавить новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preview)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="@Url.Content(item.Preview)" alt="Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.FirstName)
                    @Html.DisplayFor(modelItem => item.Author.LastName)
                    @Html.DisplayFor(modelItem => item.Author.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookId">Изменить</a> |
                    <a asp-action="Details" asp-route-id="@item.BookId">Подробно</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookId">Удалить</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
