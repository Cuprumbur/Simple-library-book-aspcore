@model BookLibrary.Models.TakenBook

@{
    ViewData["Title"] = "Edit";
}

<h2>Изменить</h2>

<h4>Запись учета книг</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TakenBookId" />
            <div class="form-group">
                <label asp-for="Reader" class="control-label"></label>
                <select asp-for="ReaderId" class="form-control" asp-items="ViewBag.Reader"></select>
                <span asp-validation-for="ReaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book" class="control-label"></label>
                <select asp-for="BookId" class="form-control" asp-items="ViewBag.Book"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateIssue" class="control-label"></label>
                <input asp-for="DateIssue" class="form-control" />
                <span asp-validation-for="DateIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsReturned" /> @Html.DisplayNameFor(model => model.IsReturned)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
